@model RawSharer.ViewModels.UI.PlayBackViewModel
<div class="playback row">
    <div class="col-md-5 album-cover">
        <img id="cover-img" alt="@Model.TrackVersion.Track.Album.Name"
             src="@Url.Action("Get", "Blobs", new RouteValueDictionary { { "id", Model.TrackVersion.Track.Album.Image.Id} })" />
        <div class="cover-circle">
            <i id="player-icon" class="fa"></i>
        </div>
    </div>
    <div class="col-md-7 song-details">
        <div class="row">
            <div class="col-md-12">
                <h1 class="win-h1" id="song-title">@Model.TrackVersion.Track.Name</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <i class="fa fa-user"></i><h6 class="win-h6" id="song-artist">@Model.TrackVersion.Track.GetArtists()</h6>
                <h6 class="win-h6 separator">|</h6>
                <i class="fa fa-dot-circle-o"></i><h6 class="win-h6" id="song-album">@Model.TrackVersion.Track.Album.Name</h6>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <audio id="player" loop="loop" controls="controls" src="@Url.Action("Get", "Blobs", new RouteValueDictionary { { "id", Model.TrackVersion.ConvertedStorage.Id } })"></audio>
            </div>
        </div>
        <div class="row">
            <div id="lyrics-border" class="col-md-12">
                <div id="lyrics-container">
                    @foreach (var sentence in Model.TrackVersion.Lyrics.Sentences.OrderBy(s => s.Sequence))
                    {
                        <p id="lyrics@(sentence.Sequence)" data-time="@(sentence.StartTime.TotalSeconds)">
                            @if (string.IsNullOrWhiteSpace(sentence.Value)) { <br /> }
                            else { @sentence.Value }
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>